<Window x:Class="SpeechRecognitionSample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="328" Width="499">
    <Grid>
        <CheckBox Height="26" HorizontalAlignment="Left" Margin="19,15,0,0" Name="EnableSRCheckBox" 
                  VerticalAlignment="Top" Width="168" Checked="EnableSRCheckBox_Checked">Enable Speech Recognition</CheckBox>
        <TextBox Margin="18,101,28,10" Name="textBox1" Background="LightBlue" AutoWordSelection="True" TextWrapping="Wrap" IsHitTestVisible="False" />
        <Button Height="25" Margin="205,16,143,0" Name="LoadGrammarButton" VerticalAlignment="Top" Click="LoadGrammarButton_Click">Load Grammar</Button>
        <Button Height="25" Margin="205,47,0,0" Name="LoadGrammarAsyncButton" VerticalAlignment="Top" HorizontalAlignment="Left" Width="129" Click="LoadGrammarAsyncButton_Click">Load Grammar Async</Button>
        <Button Height="25" HorizontalAlignment="Right" Margin="0,47,8,0" Name="CreateSRGS" VerticalAlignment="Top" 
                Width="129" Click="CreateSRGS_Click">Create SRGS Grammar</Button>
        <Button Height="25" HorizontalAlignment="Right" Margin="0,16,8,0" Name="LoadSRGS" VerticalAlignment="Top"
                Width="129" Click="LoadSRGS_Click">Load SRGS Grammar</Button>
    </Grid>
</Window>
